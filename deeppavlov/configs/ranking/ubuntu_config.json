{
  "dataset_reader": {
    "name": "ubuntu_reader",
    "data_path": "./ubuntu_data"
  },
  "dataset_iterator": {
    "name": "ranking_iterator",
    "seed": 243,
    "len_vocab": 1061009,
    "sample_candidates": "global",
    "sample_candidates_valid": "pool",
    "sample_candidates_test": "pool",
    "num_negative_samples": 10,
    "num_ranking_samples_valid": 10,
    "num_ranking_samples_test": 10
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"],
        "name": "ranking_model",
        "device_num": 0,
        "train_now": true,
        "vocab_name": "ubuntu",
        "vocabs_path": "ubuntu_data/dataset_1MM",
        "download_url": "http://lnsigo.mipt.ru/export/embeddings/wiki.en.bin",
        "embeddings": "fasttext",
        "embeddings_path": "ubuntu_embeddings",
        "embedding_dim": 300,
        "use_matrix": false,
        "seed": 243,
        "max_sequence_length": 160,
        "reccurent": "bilstm",
        "max_pooling": true,
        "type_of_weights": "shared",
        "hidden_dim": 300,
        "learning_rate": 1e-3,
        "margin": 0.1,
        "save_path": "ubuntu_ranking/model_weights.h5",
        "load_path": "ubuntu_ranking/model_weights.h5",
        "interact_pred_num": 3
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "epochs": 20,
    "batch_size": 256,
    "pytest_max_batches": 2,
    "metrics": ["r@1", "r@2", "r@5", "rank_response", "loss"],
    "validation_patience": 5,
    "val_every_n_epochs": 1
  }

}