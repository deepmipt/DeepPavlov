{
  "dataset_reader": {
    "class_name": "basic_classification_reader",
    "format": "json",
    "orient": "split",
    "x": "text",
    "y": "category",
    "data_path": "/home/nchizhikova/massive/{LANGUAGE}",
    "train": "train.json",
    "valid": "dev.json",
    "test": "test.json"
  },
  "dataset_iterator": {
      "class_name": "few_shot_iterator",
      "seed": 42,
      "shuffle": true,
      "shot": 5,
      "return_nli_format": false
  },
  "chainer": {
    "in": "text",
    "in_y": "category",
    "pipe": [
      {
        "class_name": "stream_spacy_tokenizer",
        "in": "text",
        "id": "my_tokenizer",
        "lemmas": false,
        "out": "q_token_lemmas",
	      "spacy_model": "{SPACY_MODEL}"
      },
      {
        "ref": "my_tokenizer",
        "in": "q_token_lemmas",
        "out": "q_lem"
      },
      {
        "class_name": "fasttext",
        "in": "q_token_lemmas",
        "load_path": "{DOWNLOADS_PATH}/embeddings/fasttext/{LANGUAGE}.bin",
        "mean": true,
        "out": "question_vector"
      },
      {
        "id": "answers_vocab",
        "class_name": "simple_vocab",
        "fit_on": [
          "category"
        ],
        "save_path": "{MODELS_PATH}/cat_answers.dict",
        "load_path": "{MODELS_PATH}/cat_answers.dict",
        "in": "category",
        "out": "y_ids"
      },
      {
        "in": "question_vector",
        "fit_on": [
          "question_vector",
          "y_ids"
        ],
        "out": [
          "y_pred_proba"
        ],
        "class_name": "sklearn_component",
        "main": true,
        "save_path": "{MODELS_PATH}/model.pkl",
        "load_path": "{MODELS_PATH}/model.pkl",
        "model_class": "sklearn.linear_model:LogisticRegression",
        "infer_method": "predict_proba",
        "C": 10,
        "penalty": "l2"
      },
      {
        "in": "y_pred_proba",
        "out": "y_pred_ids",
        "class_name": "proba2labels",
        "max_proba": true
      },
      {
        "in": "y_pred_ids",
        "out": "y_pred_category",
        "ref": "answers_vocab"
      }
    ],
    "out": [
      "y_pred_category"
      ]
  },
  "train": {
    "evaluation_targets": [
      "train",
      "valid",
      "test"
    ],
    "class_name": "fit_trainer",
    "metrics": [
      {
        "name": "accuracy",
        "inputs": [
          "category",
          "y_pred_category"
        ]
      }
    ]
  },
  "metadata": {
    "variables": {
      "LANGUAGE": "ru",
      "ROOT_PATH": "~/.deeppavlov",
      "CONFIG_NAME": "fasttext_logreg",
      "SPACY_MODEL": "ru_core_news_sm",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models/faq/{LANGUAGE}/{CONFIG_NAME}"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/embeddings/fasttext/{LANGUAGE}.bin",
        "subdir": "{DOWNLOADS_PATH}/embeddings/fasttext"
      },
      {
        "url": "https://files.deeppavlov.ai/datasets/clinc150_no_oos.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/clinc150_no_oos"
      }
    ]
  }
}
