{
  "dataset_reader": {
    "class_name": "basic_classification_reader",
    "format": "json",
    "orient": "split",
    "x": "text",
    "y": "category",
    "data_path": "{DOWNLOADS_PATH}/massive/{LANGUAGE}",
    "train": "train.json",
    "valid": "dev.json",
    "test": "test.json"
  },
  "dataset_iterator": {
      "class_name": "few_shot_iterator",
      "seed": 42,
      "shuffle": true,
      "shot": 5,
      "return_nli_format": false
  },
  "chainer": {
    "in": "text",
    "in_y": "category",
    "pipe": [
      {
        "class_name": "stream_spacy_tokenizer",
        "in": "text",
        "id": "my_tokenizer",
        "lemmas": true,
        "out": "token_lemmas",
	      "spacy_model": "{SPACY_MODEL}"
      },
      {
        "ref": "my_tokenizer",
        "in": "token_lemmas",
        "out": "text_lem"
      },
      {
        "in": [
          "text_lem"
        ],
        "out": [
          "text_vect"
        ],
        "fit_on": [
          "text_lem"
        ],
        "id": "tfidf_vec",
        "class_name": "sklearn_component",
        "save_path": "{MODELS_PATH}/tfidf_vectorizer.pkl",
        "load_path": "{MODELS_PATH}/tfidf_vectorizer.pkl",
        "model_class": "sklearn.feature_extraction.text:TfidfVectorizer",
        "infer_method": "transform"
      },
      {
        "class_name": "cos_sim_classifier",
        "in": "text_vect",
        "fit_on": [
          "text_vect",
          "category"
        ],
        "top_n": 1,
        "save_path": "{MODELS_PATH}/tfidf_cos_sim_classifier.pkl",
        "load_path": "{MODELS_PATH}/tfidf_cos_sim_classifier.pkl",
        "out": [
          "y_pred_category",
          "score"
        ]
      }
    ],
    "out": [
      "y_pred_category",
      "score"
    ]
  },
  "train": {
    "evaluation_targets": [
      "train",
      "valid",
      "test"
    ],
    "class_name": "fit_trainer",
    "metrics": [
      {
        "name": "accuracy",
        "inputs": [
          "category",
          "y_pred_category"
        ]
      }
    ]
  },
  "metadata": {
    "variables": {
      "LANGUAGE": "en",
      "ROOT_PATH": "~/.deeppavlov",
      "CONFIG_NAME": "tfidf_cos_sim",
      "SPACY_MODEL": "en_core_web_sm",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models/faq/{LANGUAGE}/{CONFIG_NAME}"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/massive-{LANGUAGE}.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/massive/{LANGUAGE}"
      }
    ]
  }
}
