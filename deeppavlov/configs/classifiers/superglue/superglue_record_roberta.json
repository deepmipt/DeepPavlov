{
  "metadata": {
    "variables": {
      "BASE_MODEL": "roberta-base",
      "TASK": "record",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/classifiers/superglue_{TASK}_{BASE_MODEL}"
    }
  },
  "dataset_reader": {
    "class_name": "huggingface_dataset_reader",
    "path": "super_glue",
    "name": "{TASK}",
    "train": "train",
    "valid": "validation"
  },
  "dataset_iterator": {
    "class_name": "huggingface_dataset_iterator",
    "features": ["idx", "query", "passage", "entities"],
    "label": "label",
    "seed": 42,
    "use_label_name": false
  },
  "chainer": {
    "in": ["idx", "query", "passage", "entities"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "torch_transformers_preprocessor",
        "vocab_file": "{BASE_MODEL}",
        "do_lower_case": false,
        "max_seq_length": 320,
        "in": ["query", "passage"],
        "out": ["bert_features"]
      },
      {
        "class_name": "torch_transformers_classifier",
        "n_classes": 2,
        "return_probas": true,
        "pretrained_bert": "{BASE_MODEL}",
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 2e-05,
          "weight_decay": 0.1
        },
        "learning_rate_drop_patience": 3,
        "learning_rate_drop_div": 2.0,
        "in": ["bert_features"],
        "in_y": ["y"],
        "out": ["y_pred_probas"]
      },
      {
        "class_name": "torch_record_postprocessor",
        "in": ["idx", "y", "y_pred_probas", "entities"],
        "out": ["record_examples"]
      }
    ],
    "out": ["y_pred_probas"]
  },
  "train": {
    "batch_size": 4,
    "metrics": [
      {"name": "record_f1_score",
       "inputs": ["record_examples"]}
    ],
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "class_name": "torch_trainer",
    "tensorboard_log_dir": "{MODEL_PATH}/",
    "pytest_max_batches": 2
  }
}
